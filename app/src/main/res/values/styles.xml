<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toysTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toysSecondColor</item>
        <item name="colorPrimaryDark">@color/toysSecondColor</item>
    </style>

    <style name="joinTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toysSecondColor</item>
        <item name="colorPrimaryDark">@color/toysSecondColor</item>
        <item name="colorAccent">@color/toysFirstColor</item>
    </style>

    <style name="liveTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toysSecondColor</item>
        <item name="colorPrimaryDark">@color/toysSecondColor</item>
        <item name="colorAccent">@color/gradientTextColor</item>
    </style>

    <style name="dialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/toysSecondColor</item>
    </style>

    <style name="ARTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/toysSecondColor</item>
        <item name="colorAccent">@color/toysSecondColor</item>
    </style>

</resources>
