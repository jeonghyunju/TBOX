<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnailIV"
            android:layout_width="112dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

        <jp.shts.android.library.TriangleLabelView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:backgroundColor="@android:color/holo_red_dark"
            app:corner="leftTop"
            app:labelBottomPadding="5dp"
            app:labelTopPadding="7dp"
            app:labelCenterPadding="3dp"
            app:primaryText="@string/realtimeUp"
            app:primaryTextColor="@android:color/white"/>

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnailIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

        <ImageView
            android:id="@+id/seeNumIV"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:srcCompat="@drawable/usercount"
            android:layout_below="@id/titleTV"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/seeNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/seeNumIV"
            android:layout_below="@id/titleTV"
            android:textSize="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>